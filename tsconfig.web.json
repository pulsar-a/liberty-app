{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/store/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "types/*.ts",
    "src/main/router/*.ts",
    "src/main/controllers/*.controller.ts",
    "src/main/entities/*.entity.ts",
    "src/main/queries/*.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/renderer/src/*"
      ],
      "@app-types/*": [
        "types/*"
      ],
      "@ipc-routes/*": [
        "src/main/router/*"
      ],
    }
  }
}
